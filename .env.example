# TalentFlow SAP - Environment Configuration
# Copy this file to .env and fill in your values

# Server
PORT=3001
NODE_ENV=development

# Database (SQLite - path relative to project root)
DATABASE_PATH=./data/talentflow.db

# OpenAI API (for AI-powered personalization)
OPENAI_API_KEY=your_openai_api_key_here

# GitHub API (for developer talent sourcing)
GITHUB_TOKEN=your_github_personal_access_token_here

# Optional: SMTP for email outreach
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here

# Security
JWT_SECRET=change_this_to_a_random_string
ENCRYPTION_KEY=change_this_to_a_32_char_string!
